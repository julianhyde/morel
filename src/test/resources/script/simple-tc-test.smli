(* Simple transitive closure test *)
val edges = [(1, 2), (2, 3)];
> val edges = [(1,2),(2,3)] : (int * int) list
fun edge (x, y) = (x, y) elem edges;
> val edge = fn : int * int -> bool
fun path (x, y) = edge (x, y) orelse
  (exists z where path (x, z) andalso edge (z, y));
> val path = fn : int * int -> bool
from p where path p;
> val it = [(1,2),(2,3),(1,3)] : (int * int) bag
